{% extends "base.html.twig" %}

{% block title %}
    <h1>Équipe</h1>
{% endblock %}

{% block content %}
    <table class="table-team">
        <thead>
            <tr>
                <th>Prénom, Nom</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for member in team %}
                <tr class="employee-row">
                    <td>
                        <div class="employee-row__cell-info">
                            {% include 'employe/employe--vignette.html.twig' with {'employee': member, 'classes' : 'employee-row__vignette'} %}<span class="employee-row__name">{{ member.firstname }} {{ member.lastname }}</span><span class="employee-row__email">{{ member.email }}</span>
                        </div>
                    </td>
                    
                    <td>{{ member.contractType ?? "indéfini" }}</td>
                    <td>
                        <div>
                            {% include 'employe/employe--link-edit.html.twig' with {'employee': member, 'classes': 'button'} %}
                            {% include 'employe/employe--link-delete.html.twig' with {'employee': member} %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
                <tr>
                    <td colspan="3">
                        <div>
                            {% include 'employe/employe--link-add.html.twig' with {'classes': 'button'} %}
                        </div>
                    </td>
                </tr>
        </tbody>
    </table>

{% endblock %}